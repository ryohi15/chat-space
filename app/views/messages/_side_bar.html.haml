.side_bar
  .side_bar__user-name
    = current_user.name
    .top-items
      .top-items__name
      .top-items__icons
        = link_to new_group_path do
          = icon("fas", "edit", class: "top-items__new-group")
        = link_to edit_user_path(current_user)do
          = icon("far", "user", class: "top-items__edit-user")
  .side_bar__groups
    - current_user.groups.each do |group|
      .side_bar__groups__group
        = link_to "#",class: "side_bar__groups__group__created-group" do
          %p.side_bar__groups__group__created-group__name 
            = group.name
          %p.side_bar__groups__group__created-group__message 