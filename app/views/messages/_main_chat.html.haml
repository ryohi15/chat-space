.main_chat
  .main_chat__groups-info
    .main_chat__groups-info__left-box
      .main_chat__groups-info__left-box__current-group  
        = @group.name
      .main_chat__groups-info__left-box__member-list
        - @group.users.each do |user|
          = user.name
    = link_to "Edit", edit_group_path(@group), class: "main_chat__groups-info__edit-box"

    
  .main_chat__message-list
    = render @messages
      
  .main_chat__message-form
    .form
      = form_for [@group, @message] do |f|
        .input-box
          %input.input-box__text{placeholder: "type a message", type: "text", name: "message[content]", id: "message_content"}
          %label.input-box__image{for: "message_image"}
            = icon("fa", "image")
            %input.input-box__image__file{type:"file", name: "message[image]", id: "message_image"}   
        %input.new_message__submit-btn{type: "submit", name: "commit", value: "Send", data: {disable: {with: "Send"}}}